{
  "name": "@lvce-editor/color-picker-worker",
  "version": "0.0.0-dev",
  "description": "Web Worker for the color picker in Lvce Editor",
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/color-picker-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/colorPickerWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 2,
        "functions": 2,
        "lines": 2
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lvce-editor/rpc": "^3.4.0",
    "@lvce-editor/rpc-registry": "^2.11.0",
    "@lvce-editor/verror": "^1.6.0",
    "@lvce-editor/viewlet-registry": "^1.1.0",
    "@lvce-editor/virtual-dom-worker": "^1.42.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4"
  }
}
